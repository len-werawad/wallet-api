# Environment Variables Template
# Copy this file to .env and fill in the actual values
# =============================================================================
# --- Spring profile ---
SPRING_PROFILES_ACTIVE=local

# Server Configuration
SERVER_PORT=8080

# JWT Configuration
JWT_SECRET=my-super-secret-jwt-key-32-bytes!!
JWT_ISSUER=social-banking-api
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# MySQL Configuration
MYSQL_DATABASE=social_banking_db
MYSQL_USER=app
MYSQL_PASSWORD=app
MYSQL_ROOT_PASSWORD=root
MYSQL_PORT=3306

# Database Connection
# For Docker Compose, use: jdbc:mysql://mysql:3306/...
# For local dev, use: jdbc:mysql://localhost:3306/...
DB_URL=jdbc:mysql://mysql:3306/social_banking_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DB_USERNAME=app
DB_PASSWORD=app
DB_POOL_SIZE=50
DB_POOL_MIN_IDLE=20
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=300000
DB_MAX_LIFETIME=1500000

# Redis Configuration
# For Docker Compose, use: redis
# For local dev, use: localhost
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TIMEOUT=2000ms

# Redis Connection Pool (Lettuce)
REDIS_POOL_MAX_ACTIVE=50
REDIS_POOL_MAX_IDLE=20
REDIS_POOL_MIN_IDLE=10
REDIS_POOL_MAX_WAIT=2000ms

# Flyway Configuration
FLYWAY_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
